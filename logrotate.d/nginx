# Nginx log rotation configuration
/logs/nginx/*.log {
    daily
    rotate 30
    missingok
    notifempty
    compress
    delaycompress
    sharedscripts
    create 0644 nginx nginx
    postrotate
        # Send USR1 signal to nginx to reopen log files
        if [ -f /var/run/nginx.pid ]; then
            kill -USR1 `cat /var/run/nginx.pid`
        fi
    endscript
}